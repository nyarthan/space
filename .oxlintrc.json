{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "error",
    "perf": "error",
    "style": "error",
    "nursery": "warn"
  },
  "rules": {
    "sort-keys": "off",
    "func-style": ["error", "declaration"],
    "id-length": ["error", { "exceptions": ["x", "y", "z", "i", "j", "$"] }],
    "sort-imports": "off",
    "no-magic-numbers": "off",
    "prefer-string-raw": "off",
    "array-type": ["error", { "default": "generic", "readonly": "generic" }]
  }
}
